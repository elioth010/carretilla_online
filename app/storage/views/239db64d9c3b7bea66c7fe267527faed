            <table id="datatable-menu" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Access</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <?php foreach($roles as $role): ?>
                    <tr>
                        <td><?php echo $role->name; ?></td>
                        <td>
                         <?php
                            $count = 0;
                            foreach ($role->actions()->groupBy('id')->get() as $action) {
                                if($count < (count($role->actions()->get())-1)){
                                    echo $action->name.', ';
                                }else{
                                    echo $action->name;
                                }
                                $count++;
                            }
                            ?>
                        </td>
                        <td> 
                            <a href="<?php echo URL::to('admin/access/'.$idMenu.'/view/'.$role->id); ?>" class="btn btn-info">View</a>
                            <a href="<?php echo URL::to('admin/access/'.$idMenu.'/edit/'.$role->id); ?>" class="btn btn-default">Edit</a>
                            <a href="<?php echo URL::to('admin/access/'.$idMenu.'/delete/'.$role->id); ?>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
        </div>
        <br/>
        <br/>
        <a href="<?php echo URL::to('admin/admin_menu/'.$idMenu); ?>" class="btn btn-danger">Return</a>
        
